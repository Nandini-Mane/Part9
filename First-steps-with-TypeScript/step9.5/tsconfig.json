{
  "compilerOptions": {
    "target": "ES2020",                        
  "module": "CommonJS",
  "rootDir": "./src",
  "outDir": "./dist",
  "noEmit": true,
  "allowImportingTsExtensions": true,
  "moduleResolution": "node",
  "strict": true,
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
