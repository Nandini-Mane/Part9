{
  "compilerOptions": {
    // ... other options
    "target": "es2016",
    "lib": [
      "ES6"
    ],
    "module": "CommonJS", // Set module to CommonJS
    "moduleResolution": "node", // Set moduleResolution to node
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false, // Disable verbatimModuleSyntax
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}